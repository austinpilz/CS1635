<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.pitt.cs.cs1635.anp147.sleepycommuters.DestinationSelectActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/destinationHeadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9.89"
        android:text="Displaying lines for stop " />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Destination:"
        android:textStyle="bold"
        tools:text="Select Destination:" />

    <LinearLayout
        android:id="@+id/destinationLV"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:orientation="vertical"></LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select number of stops before destination to be reminded:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/numStops"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="2"
        android:textAlignment="center" />

    <Button
        android:id="@+id/createOneTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3DD046"
        android:text="Create One Time Alert" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/createRecurring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1C331"
        android:text="Create Recurring Alert" />

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

</LinearLayout>
